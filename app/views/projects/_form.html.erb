<%= simple_form_for @project,
                    as: :project,
                    url: (@project.new_record? ? projects_path : project_path(@project)),
                    html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :title %>
  <%= f.input :info, input_html: {rows: 5, cols: 40, class: 'input-xxlarge'} %>
  <%= f.input :description, input_html: {rows: 10, cols: 40, class: 'input-xxlarge'} %>
  <%= f.input :is_published, as: :boolean, label: "Published?" %>
  <%= f.input :weight %>

  <%= f.button :submit, class: 'btn-primary' %>
<% end %>
