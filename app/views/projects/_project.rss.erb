<p><%= I18n.t 'activerecord.models.project' %> <%= link_to get_local_value(I18n.locale, {en: project.title, ua: project.title_ua}), project_url(project) %></p>

<p>
  <% if project.cover_photo %>
    <%= link_to(project_path(project), class: 'thumbnail span2') do
      image_tag(project.cover_photo.asset.url(:span2))
    end %>
  <% end %>
</p>

<p><%= highlight_links(get_local_value(I18n.locale, {en: project.description, ua: project.description_ua})).html_safe %></p>
