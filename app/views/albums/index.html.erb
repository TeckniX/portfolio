<h1>Albums <small>list of all albums</small></h1>

<%= link_to 'New Album', new_album_path, :class => 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Hidden?</th>
      <th>Images</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.id, edit_album_path(album) %></td>
        <td><%= link_to album.title %></td>
        <td><%= album.is_hidden? ? 'yes' : 'no' %></td>
        <td><%= album.images.size %></td>
        <td>
          <p>
            <%= link_to 'Edit', edit_album_path(album), :class => 'btn btn-primary' %>
            <%= link_to 'Delete', album_path(album), :class => 'btn', :method => 'delete', :data => { :confirm => 'Delete album?' } %>
          </p>
        </td>
      </tr>
    <% end %>
  </tbody>
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Hidden?</th>
      <th>Images</th>
      <th>Actions</th>
    </tr>
  </thead>
</table>