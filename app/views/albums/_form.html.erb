<%= simple_form_for @album,
                    as: :album,
                    url: (@album.new_record? ? albums_path : album_path(@album)),
                    html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :description, input_html: {rows: 5, cols: 40, class: 'input-xxlarge'} %>
  <%= f.input :is_published, as: :boolean, label: 'Published? (Images will be visible)' %>
  <%= f.input :is_upload_to_stock, as: :boolean, label: 'Upload to stocks?' %>
  <%= f.input :weight, label: 'Weight' %>

  <%= f.button :submit, class: 'btn-primary' %>
<% end %>
