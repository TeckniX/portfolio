<ul class="thumbnails">
  <% images.each do |image| %>
    <li class="span3">
      <div>
        <%= link_to(image.asset.url(:big),
                    :class => 'thumbnail fancybox',
                    :rel => 'group',
                    :title => image.title || 'Untitled',
                    'data-original-title' => image.title,
                    'data-content' => "#{(image.desc || 'No description')}<br>#{image.created_at.strftime("%d-%m-%Y")}") do
              image_tag(image.asset.url(:span3))
        end %>
      </div>
    </li>
  <% end %>
</ul>