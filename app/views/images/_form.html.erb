<%= semantic_form_for(@image, :html => {:novalidate => true}) do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <%= f.input :album, :as => :select %>

    <% if f.object.asset? %>
      <%= link_to image_tag(f.object.asset_url_resolved(:span4)), f.object.asset_url_resolved(:big) %>
    <% end %>

    <%= f.input :asset, :as => :file %>
    <%= f.input :asset_cache, :as => :hidden %>
    <%= f.input :is_vertical %>

    <%= f.input :title %>
    <%= f.input :desc %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>