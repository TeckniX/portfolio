<h1><%= @image.title %> <small>image</small>
  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_image_path(@image), :class => 'btn btn-primary' %>
  <% end %>
</h1>

<div class="row">
  <div class="span8">
    <div class="caption">
      <%= @image.render_data %>
    </div>
    <div class="caption">
      <% unless @image.tags.empty? %>
      <p>
        <% @image.tags.each do |tag| %>
          <%= link_to tag, root_path(:q => {:title_or_desc_or_tags_cache_or_album_title_cont => tag}), :class => 'label' %>
        <% end %>
      </p>
      <% end %>
    </div>
  </div>
  <div class="span4">
    <p class="pull-right">
      <%= link_to "#{rand(100)} Comments", '#', :class => 'label' %>
    </p>
  </div>
</div>


