<h1><%= @image.title %> <small>image</small>
  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_image_path(@image), :class => 'btn btn-primary' %>
  <% end %>
</h1>

<div class="row">
  <div class="span8">
    <div class="caption">
      <%= @image.render_data %>
    </div>
    <div class="caption">
      <% unless @image.tags.empty? %>
      <p>
        <% @image.tags.each do |tag| %>
          <%= link_to "<i class=\"icon-tag icon-white\"> </i> #{tag}".html_safe, root_path(:q => {:title_or_desc_or_tags_cache_or_album_title_cont => tag}), :class => 'label' %>
        <% end %>
      </p>
      <% end %>
    </div>
  </div>
  <div class="span4">
    <p class="pull-right">
    </p>
  </div>
</div>

<div class="thumbnail">
  <%= image_tag(@image.asset.url(:big)) %>
</div>

<div class="container">
  <div id="disqus_thread"></div>
  <script type="text/javascript">
    var disqus_shortname = '<%= SITE[:disqus_shortname] %>';
    var disqus_identifier = '<%= "image_#{@image.id}" %>';
    var disqus_url = '<%= image_url(@image) %>';
    var disqus_developer = '<%= SITE[:disqus_developer] %>';
    (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
  </script>
  <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
</div>
