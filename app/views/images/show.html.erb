<h1>
  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_image_path(@image), :class => 'btn btn-primary' %>
  <% end %>

  <%= @image.title %>

  <% if user_signed_in? %>
    <% if @image.title.scan(/\w+/).size < 5 %>
      <span class="label label-important">need 5 words</span>
    <% end %>
  <% end %>

  <small><%= @image.album.title %></small>
</h1>

<div class="thumbnail">
  <%= image_tag(@image.asset.url(:big)) %>
</div>

<div class="row">
  <div class="span11">
    <div class="caption">
      <%= @image.render_data %>

      <% if user_signed_in? %>
        <% if @image.render_data.scan(/\w+/).size < 15 %>
          <span class="label label-important">need 2 sentences</span>
        <% end %>
      <% end %>
    </div>
    <div class="caption">
      <% unless @image.tags.empty? %>
      <p>
        <% @image.tags.each do |tag| %>
          <%= link_to "<i class=\"icon-tag icon-white\"> </i> #{tag}".html_safe, root_path(:q => {Image::DEFAULT_QUERY.to_sym => tag}), :class => 'label' %>
        <% end %>
      <% end %>

      <% if user_signed_in? %>
        <% if @image.tags_resolved.count(',') < 30 %>
          <span class="label label-important">need 30 tags, have <%= @image.tags_resolved.count(',') %></span>
        <% end %>
      <% end %>
      </p>
    </div>
  </div>
  <div class="span1">
    <p class="pull-right">
    </p>
  </div>
</div>

<div class="container">
  <div id="disqus_thread"></div>
  <script type="text/javascript">
    var disqus_shortname = '<%= SITE[:disqus_shortname] %>';
    var disqus_identifier = '<%= "image_#{@image.id}" %>';
    var disqus_url = '<%= image_url(@image) %>';
    var disqus_developer = '<%= SITE[:disqus_developer] %>';
    (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
  </script>
  <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
</div>
