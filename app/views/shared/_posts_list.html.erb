<%= search_form_for @q || Post.search(), {:url => root_path} do |f| %>
  <%= f.label :title_or_body_or_category_title_cont %>
  <%= f.text_field :title_or_body_or_category_title_cont %>
  <%= f.submit %>
<% end %>

<ul class="posts">
  <%= render :partial => 'posts/post', :collection => posts %>
</ul>

<%= paginate posts %>
