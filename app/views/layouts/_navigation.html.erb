<%= link_to "Portfolio", root_path, :class => 'brand' %>
<div class="nav-collapse collapse">
  <ul class="nav pull-left">
    <li class="divider-vertical"></li>
    <% Album.includes([:images]).all.each do |album| %>
      <% if album.images.size > 0 %>
        <li class="<%= current_page?(album_path(album)) ? 'active' : '' %>">
          <%= link_to album.title, album_path(album) %>
        </li>
      <% end %>
    <% end %>
    <% if user_signed_in? %>
      <li class="<%= current_page?(images_path) ? 'active' : '' %>">
        <%= link_to('Images', images_path) %>
      </li>
    <% end %>
    <li class="divider-vertical"></li>
    <li class="<%= current_page?(contacts_path) ? 'active' : '' %>">
      <%= link_to 'Contacts', contacts_path %>
    </li>
  </ul>

  <ul class="nav pull-right">
    <li class="divider-vertical"></li>
    <% if user_signed_in? %>
      <li>
        <%= link_to('Edit account', edit_user_registration_path) %>
      </li>
    <% end %>
    <% if user_signed_in? %>
      <li>
        <%= link_to('Logout', destroy_user_session_path, :method=>'delete') %>
      </li>
    <% else %>
      <li class="<%= current_page?(new_user_session_path) ? 'active' : '' %>">
        <%= link_to('Login', new_user_session_path)  %>
      </li>
    <% end %>
  </ul>

  <form class="navbar-search pull-right" method="get" action="/">
    <input type="text" class="input-medium search-query" placeholder="Search" name="q[title_or_desc_or_album_title_cont]" value="<%= params[:q][:title_or_desc_or_album_title_cont] if params[:q] %>">
  </form>
</div>