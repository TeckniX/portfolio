<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : SITE[:title] %></title>
    <meta name="description" content="<%= SITE[:description] %>">
    <meta name="author" content="">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
    <%= auto_discovery_link_tag(:rss, rss_feed_url) %>
    <% if SITE[:google_analytics_account].present? %>
      <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', '<%= SITE[:google_analytics_account] %>']);
        _gaq.push(['_trackPageview']);
        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>
    <% end %>
  </head>
  <body>
    <header class="navbar navbar-fixed">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div class="container">
      <div class="content">
        <div class="row">
          <div class="span12">
            <% flash.each do |name, msg| %>
              <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
                <a class="close" data-dismiss="alert">×</a>
                <%= msg %>
              </div>
            <% end %>
            <%= yield %>
          </div>
        </div>
        <br/>
        <footer class="footer">
          <p>
            <small>
              Copyright © 2012 <%= SITE[:copyright_holder] %>
              <br/>
              Except where otherwise noted, content on <a href="<%= SITE[:host] %>"><%= SITE[:host] %></a> is licensed under a <a rel="nofollow" href="http://creativecommons.org/licenses/by-nc-nd/3.0/">Creative Commons Attribution-NonCommercial-NoDerivs 3.0 Unported License</a>.
              <br/>
              This site is based on <a href="https://github.com/rilian/portfolio" rel="nofollow">rilian/portfolio</a> engine.
            </small>
          </p>
          <p>
            <% if user_signed_in? %>
              <%= link_to 'User Sign Out', destroy_user_session_path, :method => 'delete' %>
            <% else %>
              <%= link_to 'User Sign In', new_user_session_path %>
            <% end %>
          </p>
        </footer>
      </div>
    </div>

  <% if SITE[:disqus_shortname].present? %>
    <script type="text/javascript">
      var disqus_shortname = '<%= SITE[:disqus_shortname] %>';
      var disqus_developer = '<%= SITE[:disqus_developer] %>';
      (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
        s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
      }());
    </script>
  <% end %>
  </body>
</html>